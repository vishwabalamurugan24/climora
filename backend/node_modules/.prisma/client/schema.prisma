// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String        @id @default(uuid())
  email     String        @unique
  password  String
  name      String?
  settings  UserSettings?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model UserSettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  timeRanges      String // Comma separated TimeRange enums
  weatherTriggers String // Comma separated WeatherTrigger enums
  updatedAt       DateTime @updatedAt
}

model Song {
  id              String @id @default(uuid())
  title           String
  artist          String
  assetPath       String
  genres          String // Comma separated
  languages       String // Comma separated
  moods           String // Comma separated SongMood enums
  weatherTriggers String // Comma separated WeatherTrigger enums
  idealTimeRanges String // Comma separated TimeRange enums
}
